{
  "name": "aetheria-ai",
  "version": "1.0.4",
  "description": "Aetheria ai Desktop Assistant: An AI-Powered Desktop Application",
  "main": "js/main.js",
  "scripts": {
    "start": "http-server . -p 3000 -c-1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.mycompany.aiosdesktop",
    "productName": "Aetheria ai",
    "copyright": "Copyright Â© 2024 Aetheria ai",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "js/**/*",
      "css/**/*",
      "*.html",
      "assets/**/*",
      "!python-backend/**/*",
      "!*.md",
      "!*.log",
      "!dist/**/*",
      "!aios_env/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asar": true
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.10",
    "audio-decode": "^2.2.2",
    "dompurify": "^3.2.4",
    "dotenv": "^16.4.7",
    "highlight.js": "^11.11.1",
    "image-js": "^0.36.0",
    "JSONStream": "^1.3.5",
    "katex": "^0.16.21",
    "mammoth": "^1.9.0",
    "marked": "^15.0.6",
    "node-wav": "^0.0.2",
    "pdf-parse": "^1.1.1",
    "prismjs": "^1.29.0",
    "socket.io-client": "^4.8.1",
    "tesseract.js": "^6.0.0",
    "turndown": "^7.2.0",
    "uuid": "^11.0.5",
    "whisper": "^0.2.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^26.0.12",
    "http-server": "^14.1.1"
  }
}
